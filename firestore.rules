rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read access for everyone, but write access only for authenticated users.
    match /projects/{projectId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // You might have other rules for other collections, like 'users' or 'contracts'.
    // For example, allowing users to only access their own data:
    // match /users/{userId} {
    //   allow read, update, delete: if request.auth != null && request.auth.uid == userId;
    //   allow create: if request.auth != null;
    // }
     match /contracts/{contractId} {
      allow read, write, delete: if request.auth != null;
    }

    match /installments/{installmentId} {
      allow read, write, delete: if request.auth != null;
    }
  }
}
