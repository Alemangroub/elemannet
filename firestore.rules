rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Function to check if a user has a specific role
    function isUserRole(role) {
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == role;
    }

    // Projects Collection
    match /projects/{projectId} {
      allow read: if isUserRole('admin') || isUserRole('supervisor');
      allow write: if isUserRole('admin');

      // Subcollection for project items
      match /items/{itemId} {
        allow read: if isUserRole('admin') || isUserRole('supervisor');
        allow write, delete: if isUserRole('admin');
      }
    }

    // Daily Expenses: Supervisors with the correct role can create, Admins can read/write
    match /daily_expenses/{expenseId} {
      allow create: if isUserRole('supervisor');
      allow read, update, delete: if isUserRole('admin');
    }

    // Daily Reports: Supervisors with the correct role can create, Admins can read/write
    match /daily_reports/{reportId} {
      allow create: if isUserRole('supervisor');
      allow read, update, delete: if isUserRole('admin');
    }

    // Users: Admins can manage users
    match /users/{userId} {
       allow read, write: if isUserRole('admin');
       allow get: if request.auth != null && request.auth.uid == userId;
    }

    // Contracts & Installments: Only Admins have access
    match /contracts/{contractId} {
      allow read, write, delete: if isUserRole('admin');
    }

    match /installments/{installmentId} {
      allow read, write, delete: if isUserRole('admin');
    }
  }
}
