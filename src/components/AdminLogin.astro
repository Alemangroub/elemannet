    text-align: center;
    margin: 0 auto;
  }

  h2 {
    color: #333;
    margin-bottom: 1.5rem;
  }

  .input-group {
    margin-bottom: 1.5rem;
    text-align: right;
  }

  label {
    display: block;
    margin-bottom: 0.5rem;
    color: #555;
    font-weight: 600;
  }

  input[type="email"],
  input[type="password"] {
    width: 100%;
    padding: 0.8rem 1rem;
    border: 1px solid #ccc;
    border-radius: 8px;
    font-size: 1rem;
    direction: ltr;
    text-align: left;
  }
  
  .btn {
    width: 100%;
    padding: 0.9rem;
    border: none;
