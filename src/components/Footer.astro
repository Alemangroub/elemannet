<style>
  .site-footer {
    position: relative;
    overflow: hidden;
    padding: 3rem 2rem 1.5rem;
    background-color: #1a1c22;
    color: #a0aec0;
    font-size: 0.95rem;
    border-top: 1px solid #323641;
  }

  .site-footer::before,
  .site-footer::after {
    content: "";
    position: absolute;
    z-index: 0;
    width: 600px;
    height: 600px;
    background: radial-gradient(circle, rgba(33, 150, 243, 0.5) 0%, rgba(33, 150, 243, 0) 65%);
    border-radius: 50%;
    filter: blur(80px);
    opacity: 1;
  }

  .site-footer::before {
    top: -250px;
    left: -200px;
    animation: move-aurora-1 20s linear infinite alternate;
  }

  .site-footer::after {
    bottom: -300px;
    right: -150px;
    background: radial-gradient(circle, rgba(156, 39, 176, 0.4) 0%, rgba(156, 39, 176, 0) 65%);
    animation: move-aurora-2 25s linear infinite alternate;
  }

  @keyframes move-aurora-1 {
    0% {
      transform: translate(0, 0) scale(1);
    }
    50% {
      transform: translate(120px, 100px) scale(1.3);
    }
    100% {
      transform: translate(-40px, -50px) scale(1);
    }
  }

  @keyframes move-aurora-2 {
    0% {
      transform: translate(0, 0) scale(1.3);
    }
    50% {
      transform: translate(-150px, -60px) scale(1);
    }
    100% {
      transform: translate(50px, 80px) scale(1.4);
    }
  }

  .footer-container,
  .footer-bottom {
    position: relative;
    z-index: 1;
  }

  .footer-container {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2.5rem;
    max-width: 1200px;
    margin: 0 auto 2.5rem;
  }

  .footer-section h4 {
    position: relative;
    padding-bottom: 0.5rem;
    margin-bottom: 1.25rem;
    color: #ffffff;
    font-size: 1.2rem;
  }

  .footer-section h4::after {
    content: '';
    position: absolute;
    bottom: 0;
    right: 0;
    width: 40px;
    height: 2px;
    background: #ffffff;
    box-shadow: 0 0 10px #ffffff, 0 0 5px #ffffff;
  }

  .footer-section p,
  .footer-section ul {
    margin: 0;
    padding: 0;
    line-height: 1.8;
  }

  .footer-section ul {
    list-style: none;
  }

  .footer-section.about ul li {
    position: relative;
    padding-right: 20px;
    margin-bottom: 0.7rem;
  }

  .footer-section.about ul li::before {
    content: '\2713';
    position: absolute;
    right: 0;
    color: #ffffff;
    font-weight: bold;
    text-shadow: 0 0 10px #ffffff, 0 0 5px #ffffff;
  }

  .footer-section.links ul li {
    margin-bottom: 0.8rem;
  }

  .footer-section a {
    color: #a0aec0;
    text-decoration: none;
    transition: color 0.3s ease, padding-right 0.3s ease;
  }

  .footer-section a:hover,
  .contact-item:hover,
  .social-link:hover {
    color: #ffffff;
  }

  .footer-section a:hover:not(.contact-item):not(.social-link) {
    padding-right: 5px;
  }

  .contact-details,
  .social-links {
    display: flex;
    flex-direction: column;
    gap: 1.1rem;
    margin-top: 1rem;
  }

  .contact-item,
  .social-link {
    display: flex;
    align-items: center;
    gap: 0.8rem;
    text-decoration: none;
    transition: color 0.3s ease, transform 0.3s ease;
  }

  .contact-item:hover,
  .social-link:hover {
    transform: translateX(5px);
  }

  .contact-item svg,
  .social-link svg {
    width: 22px;
    height: 22px;
    fill: currentColor;
    transition: fill 0.3s ease;
  }

  .footer-bottom {
    padding-top: 1.5rem;
    font-size: 0.9rem;
    text-align: center;
    border-top: 1px solid #323641;
  }

  .footer-bottom p {
    margin: 0;
  }

  @media (max-width: 768px) {
    .site-footer {
      padding: 2.5rem 1.5rem 1.5rem;
      text-align: center;
    }

    .footer-section h4::after {
      right: auto;
      left: 50%;
      transform: translateX(-50%);
    }

    .footer-section.about ul li {
      padding-right: 0;
      padding-left: 20px;
    }

    .footer-section.about ul li::before {
      right: auto;
      left: 0;
    }

    .contact-details,
    .social-links {
      align-items: center;
    }
  }
</style>