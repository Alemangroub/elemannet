---
import services from '../data/services.json';
---

<section id="services" class="services">
    <div class="container">
        <div class="section-header">
            <h2 class="section-title">خدماتنا</h2>
            <p class="section-subtitle">نقدم حلولاً عقارية متكاملة تلبي تطلعاتكم وتصنع قيمة حقيقية لاستثماراتكم. اضغط على أي خدمة لمعرفة المزيد.</p>
        </div>
        <div class="services-grid">
            {services.map((service, index) => (
                <a href={`/services/${service.slug}`} class="service-card-link" data-index={index}>
                    <article class="service-card">
                        <img src={service.image} alt={service.title} class="service-image" />
                        <div class="card-overlay"></div>
                        <h3 class="service-title">{service.title}</h3>
                    </article>
                </a>
            ))}
        </div>
    </div>
</section>

<script is:inline>
    document.addEventListener('DOMContentLoaded', () => {
        const cards = document.querySelectorAll('.service-card-link');

        const observer = new IntersectionObserver((entries, observer) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    const card = entry.target;
                    const index = card.getAttribute('data-index');
                    card.style.transitionDelay = `${index * 200}ms`;
                    card.classList.add('is-visible');
                    observer.unobserve(card);
                }
            });
        }, { threshold: 0.1 });

        cards.forEach(card => {
            observer.observe(card);
        });
    });
</script>

<style>
    .services {
        padding: 80px 0;
        background-color: #FDFCFB;
        direction: rtl;
        overflow-x: hidden;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 20px;
    }

    .section-header {
        text-align: center;
        margin-bottom: 60px;
    }

    .section-title {
        font-family: 'Cairo', sans-serif;
        font-size: 2.8rem;
        font-weight: 700;
        color: #2c3e50;
        margin-bottom: 10px;
    }

    .section-subtitle {
        font-family: 'Almarai', sans-serif;
        font-size: 1.2rem;
        color: #5a6878;
        max-width: 650px;
        margin: 0 auto;
        line-height: 1.6;
        opacity: 0.85;
    }

    .services-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 35px;
    }

    .service-card-link {
        text-decoration: none;
        color: inherit;
        display: block;
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05), 0 15px 35px rgba(0, 0, 0, 0.05);
        opacity: 0;
        transform: translateY(50px);
        transition: opacity 1s ease-out, transform 1s ease-out, box-shadow 0.4s ease;
    }

    .service-card-link.is-visible {
        opacity: 1;
        transform: translateY(0);
    }

    .service-card-link:hover {
        transform: translateY(-12px) !important;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.08), 0 25px 50px rgba(0, 0, 0, 0.08);
    }

    .service-card {
        position: relative;
        height: 380px;
        display: flex;
        flex-direction: column;
        justify-content: flex-end;
        align-items: center;
        text-align: center;
        color: white;
    }

    .service-image {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.4s ease;
    }

    .service-card-link:hover .service-image {
        transform: scale(1.05);
    }

    .card-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(to top, rgba(10, 15, 20, 0.85) 0%, rgba(0, 0, 0, 0) 50%);
        z-index: 1;
    }

    .service-title {
        position: relative;
        z-index: 2;
        font-family: 'Cairo', sans-serif;
        font-size: 1.9rem;
        font-weight: 700;
        padding: 20px 25px;
        line-height: 1.4;
    }

    /* Responsive Styles for Tablet and Mobile */
    @media (max-width: 768px) {
        .services {
            padding: 60px 0;
        }
        .section-header {
            margin-bottom: 50px;
        }
        .section-title {
            font-size: 2.2rem;
        }
        .section-subtitle {
            font-size: 1rem;
        }
        .services-grid {
            gap: 25px;
        }
        .service-card {
            height: 320px;
        }
        .service-title {
            font-size: 1.6rem;
        }
    }

    /* Responsive Styles for Small Mobile */
    @media (max-width: 480px) {
        .services {
            padding: 40px 0;
        }
        .container {
            padding: 0 15px;
        }
        .section-header {
            margin-bottom: 40px;
        }
        .section-title {
            font-size: 2rem;
        }
        .services-grid {
            gap: 20px;
        }
        .service-card {
            height: 300px;
        }
        .service-title {
            font-size: 1.5rem;
        }
    }
</style>