---
const { title, subtitle } = Astro.props;
---

<section class="hero">
    <div class="hero-overlay"></div>
    <div class="hero-content">
        <h1 id="hero-title" class="typing-effect"></h1>
        <p id="hero-subtitle" class="typing-effect"></p>
    </div>
</section>

<script define:vars={{ title, subtitle }}>
    const titleElement = document.getElementById('hero-title');
    const subtitleElement = document.getElementById('hero-subtitle');

    function typeWriter(element, text, onComplete) {
        let i = 0;
        element.innerHTML = '';
        element.classList.add('typing');
        
        function type() {
            if (i < text.length) {
                element.innerHTML += text.charAt(i);
                i++;
                setTimeout(type, 50);
            } else {
                element.classList.remove('typing');
                if (onComplete) {
                    onComplete();
                }
            }
        }
        type();
    }

    document.addEventListener('DOMContentLoaded', () => {
        setTimeout(() => {
            typeWriter(titleElement, title, () => {
                subtitleElement.style.opacity = '1';
                setTimeout(() => {
                    typeWriter(subtitleElement, subtitle);
                }, 200);
            });
        }, 500);
    });
</script>

<style>
    .hero {
        position: relative;
        height: calc(100vh - 125px);
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        color: white;
        overflow: hidden;
        background-image: url('/photo-1512915922686-57c11dde9b6b.avif');
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
    }

    .hero-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.55);
        z-index: 1;
    }

    .hero-content {
        position: relative;
        z-index: 2;
        padding: 20px;
    }

    #hero-title {
        font-family: 'Cairo', sans-serif;
        font-size: 3.2rem;
        font-weight: 700;
        margin: 0;
        direction: rtl;
    }

    #hero-subtitle {
        font-family: 'Almarai', sans-serif;
        font-size: 2rem;
        font-weight: 300;
        margin-top: 15px;
        color: rgba(255, 255, 255, 0.85);
        opacity: 0;
        direction: rtl;
    }

    .typing-effect.typing::after {
        content: '|';
        display: inline-block;
        margin-right: 5px;
        animation: blink 0.7s infinite;
    }

    @keyframes blink {
        0%, 100% { opacity: 1; }
        50% { opacity: 0; }
    }

    /* Responsive Styles for Tablet */
    @media (max-width: 768px) {
        .hero {
            height: calc(100vh - 200px); /* Adjust height for smaller screens */
            background-attachment: scroll; /* Disable parallax for performance */
        }
        #hero-title {
            font-size: 2.5rem;
        }
        #hero-subtitle {
            font-size: 1.4rem;
        }
    }

    /* Responsive Styles for Mobile */
    @media (max-width: 480px) {
        .hero {
            height: calc(100vh - 250px); /* Further adjust height */
        }
        #hero-title {
            font-size: 2rem;
            line-height: 1.3;
        }
        #hero-subtitle {
            font-size: 1.2rem;
        }
    }
</style>