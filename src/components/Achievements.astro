---
import achievements from '../data/achievements.json';
---

<section id="achievements" class="achievements">
    <div class="achievements-overlay"></div>
    <div class="container">
        <div class="section-header">
            <h2 class="section-title">إنجازاتنا في أرقام</h2>
            <p class="section-subtitle">نفخر بما حققناه، والأرقام هي خير دليل على التزامنا بالتميز والجودة.</p>
        </div>
        <div class="achievements-grid">
            {achievements.map((item) => (
                <div class="achievement-item">
                    <div class="achievement-circle">
                        <span class="achievement-value" data-target-value={item.value.replace('+', '')}>0</span>
                    </div>
                    <h3 class="achievement-title">{item.title}</h3>
                    <p class="achievement-description">{item.description}</p>
                </div>
            ))}
        </div>
    </div>
</section>

<script>
    const animatedCounters = new WeakSet();

    const animateValue = (element, start, end, duration) => {
        let startTime = null;
        const step = (currentTime) => {
            if (!startTime) startTime = currentTime;
            const progress = Math.min((currentTime - startTime) / duration, 1);
            const currentValue = Math.floor(progress * (end - start) + start);
            element.textContent = `+${currentValue}`;
            if (progress < 1) {
                window.requestAnimationFrame(step);
            }
        };
        window.requestAnimationFrame(step);
    };

    const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting && !animatedCounters.has(entry.target)) {
                const valueEl = entry.target.querySelector('.achievement-value');
                const finalValue = parseInt(valueEl.getAttribute('data-target-value'), 10);
                animateValue(valueEl, 0, finalValue, 2000);
                animatedCounters.add(entry.target);
                entry.target.classList.add('is-visible');
            }
        });
    }, { threshold: 0.5 });

    document.querySelectorAll('.achievement-item').forEach(item => {
        observer.observe(item);
    });
</script>

<style>
    :root {
        --color-primary-text: #ffffff;
        --color-secondary-text: #e0e0e0;
        --font-main: 'Cairo', sans-serif;
        --font-secondary: 'Almarai', sans-serif;
    }

    .achievements {
        position: relative;
        padding: 100px 0;
        direction: rtl;
        background-image: url('/كيف-تعرف-أن-معايير-النجاح-قد-تحققت؟.webp');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        background-attachment: fixed;
    }

    .achievements-overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(46, 58, 70, 0.85);
        z-index: 1;
    }

    .container {
        position: relative;
        z-index: 2;
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 20px;
    }

    .section-header {
        text-align: center;
        margin-bottom: 80px;
    }

    .section-title {
        font-family: var(--font-main);
        font-size: 3rem;
        font-weight: 800;
        color: var(--color-primary-text);
        margin-bottom: 10px;
    }

    .section-subtitle {
        font-family: var(--font-secondary);
        font-size: 1.3rem;
        color: var(--color-secondary-text);
        max-width: 650px;
        margin: 0 auto;
        line-height: 1.6;
        opacity: 0.9;
    }

    .achievements-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 60px 40px;
    }

    .achievement-item {
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        opacity: 0;
        transform: translateY(30px);
        transition: opacity 0.7s ease-out, transform 0.7s ease-out;
    }

    .achievement-item.is-visible {
        opacity: 1;
        transform: translateY(0);
    }

    .achievement-circle {
        width: 200px;
        height: 200px;
        border-radius: 50%;
        background-color: rgba(255, 255, 255, 0.05);
        border: 6px solid var(--color-primary-text);
        display: flex;
        justify-content: center;
        align-items: center;
        margin-bottom: 30px;
        box-shadow: 0 0 40px rgba(0, 0, 0, 0.3);
        transition: transform 0.4s ease, background-color 0.4s ease;
    }

    .achievement-item:hover .achievement-circle {
        transform: translateY(-8px) scale(1.05);
        background-color: rgba(255, 255, 255, 0.15);
    }

    .achievement-value {
        font-family: var(--font-main);
        font-size: 4.5rem;
        font-weight: 800;
        color: var(--color-primary-text);
    }

    .achievement-title {
        font-family: var(--font-secondary);
        font-size: 1.6rem;
        font-weight: 700;
        color: var(--color-primary-text);
        margin-bottom: 10px;
    }

    .achievement-description {
        font-family: var(--font-secondary);
        font-size: 1rem;
        color: var(--color-secondary-text);
        line-height: 1.6;
        max-width: 240px;
        opacity: 0.9;
    }

    @media (max-width: 768px) {
        .achievements {
            background-attachment: scroll;
            padding: 60px 0;
        }
        .section-title { font-size: 2.5rem; }
        .section-subtitle { font-size: 1.1rem; }
        .achievement-circle { width: 180px; height: 180px; }
        .achievement-value { font-size: 3.8rem; }
        .achievement-title { font-size: 1.4rem; }
    }

    @media (max-width: 576px) {
        .achievements-grid {
            grid-template-columns: 1fr;
            max-width: 320px;
            margin: 0 auto;
        }
    }
</style>
