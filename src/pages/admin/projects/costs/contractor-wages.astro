---
import Layout from '../../../../layouts/Layout.astro';

const { id } = Astro.params;
---

<Layout title="أجرة مقاول">
    <main class="container">
        <h1>أجرة مقاول للمشروع</h1>
        <p>هذه الصفحة ستعرض أجرة مقاول للمشروع المحدد.</p>
        <a href={`/admin/projects/${id}`}>&larr; العودة إلى تفاصيل المشروع</a>
    </main>
</Layout>

<style>
    .container {
        direction: rtl;
        padding: 2rem;
        max-width: 900px;
        margin: 2rem auto;
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.06);
    }
    h1 {
        font-family: 'Cairo', sans-serif;
        font-size: 2rem;
        font-weight: 800;
        border-bottom: 2px solid #f0f0f0;
        padding-bottom: 1rem;
        margin-bottom: 1.5rem;
    }
    p {
        font-family: 'Cairo', sans-serif;
        font-size: 1.1rem;
        line-height: 1.8;
        color: #555;
    }
    a {
        display: inline-block;
        margin-top: 2rem;
        padding: 0.6rem 1.2rem;
        background-color: #007bff;
        color: #fff;
        text-decoration: none;
        border-radius: 8px;
        font-family: 'Cairo', sans-serif;
        font-weight: 700;
        transition: background-color 0.2s;
    }
    a:hover {
        background-color: #0056b3;
    }
</style>
