        --secondary-color: #6c757d; 
        --success-color: #28a745; 
        --danger-color: #dc3545; 
        --warning-color: #ffc107; 
        --border-color: #dee2e6;
        --background-color: #f4f6f9; 
        --white-color: #fff;
        --shadow: 0 4px 15px rgba(0,0,0,0.07);
