---
import Layout from '../../../../../layouts/Layout.astro';
import AdminLogin from '../../../../../components/AdminLogin.astro';
import { db } from "../../../../../firebase/admin";

export const prerender = false;

const { id } = Astro.params; 
let project = null;

try {
    const projectDoc = await db.collection('projects').doc(id).get();
    if (projectDoc.exists) {
        project = { id: projectDoc.id, ...projectDoc.data() };
    } else {
        return Astro.redirect('/admin/projects?error=not_found');
    }
} catch (error) {
    console.error("Error fetching project:", error);
}

const costType = 'electricity_wages'; // Define the cost type for this page

---
<Layout title={`أجرة كهرباء - ${project ? project.projectName : ''}`}>
    <div id="auth-loading-message" class="auth-container">
        <p>جارٍ التحقق من صلاحيات الدخول...</p>
    </div>

    <div id="admin-login-container" class="auth-container" style="display: none;">
      <AdminLogin />
    </div>

    <main id="page-content" class="container" style="display: none;">
        <div class="page-header">
             <div>
                <h1>أجرة كهرباء لمشروع: {project.projectName}</h1>
                <p>إدارة جداول تكاليف أجرة الكهرباء الخاصة بالمشروع.</p>
            </div>
            <div>
                <a href={`/admin/projects/${id}`} class="back-link">&larr; العودة لتفاصيل المشروع</a>
                <button id="logout-button" class="btn-logout">تسجيل الخروج</button>
            </div>
        </div>
        
        <div class="actions-container">
            <button id="add-table-btn" class="action-button add-btn">+ اضافة جدول جديد</button>
        </div>

        <div id="tables-wrapper"></div>

        <div id="add-table-modal" class="modal-overlay" style="display: none;">
            <div class="modal">
                <div class="modal-header">
                    <h2>تسمية الجدول الجديد</h2>
                    <button class="close-modal-btn">&times;</button>
                </div>
                <div class="modal-body">
                    <form id="add-table-form">
                        <label for="new-table-name">اسم الجدول:</label>
                        <input type="text" id="new-table-name" name="tableName" required autocomplete="off" placeholder="مثال: كهربائي الطابق الأول">
                        <button type="submit" class="action-button add-btn">إنشاء الجدول</button>
                    </form>
                </div>
            </div>
        </div>
    </main>
</Layout>

<script>
    import { auth, db } from '../../../../../firebase/client';
    import { onAuthStateChanged, signOut } from "firebase/auth";
    import { doc, getDoc } from "firebase/firestore";

    document.addEventListener('DOMContentLoaded', () => {
        const authLoadingMessage = document.getElementById('auth-loading-message');
        const loginContainer = document.getElementById('admin-login-container');
        const pageContent = document.getElementById('page-content');

        onAuthStateChanged(auth, async (user) => {
            if(authLoadingMessage) authLoadingMessage.style.display = 'none';

            if (user) {
                try {
                    const userDocRef = doc(db, "users", user.uid);
                    const userDoc = await getDoc(userDocRef);

                    if (userDoc.exists() && userDoc.data().role === 'admin') {
                        if(pageContent) pageContent.style.display = 'block';
                        if(loginContainer) loginContainer.style.display = 'none';

                        const logoutButton = document.getElementById('logout-button');
                        if (logoutButton) {
                            logoutButton.addEventListener('click', async () => {
                                await signOut(auth);
                                window.location.href = '/admin';
                            });
                        }

                    } else {
                        await signOut(auth);
                        window.location.href = '/admin';
                    }
                } catch (error) {
                    console.error('Auth Check Error:', error);
                    await signOut(auth);
                    if(loginContainer) loginContainer.style.display = 'block';
                    if(pageContent) pageContent.style.display = 'none';
                }
            } else {
                if(pageContent) pageContent.style.display = 'none';
                if(loginContainer) loginContainer.style.display = 'block';
            }
        });
    });
</script>

<script define:vars={{ projectId: id, costType: costType }}>
document.addEventListener('DOMContentLoaded', () => {
    const pageContent = document.getElementById('page-content');
    if (!pageContent || pageContent.style.display === 'none') {
        const observer = new MutationObserver((mutationsList, observer) => {
            for(const mutation of mutationsList) {
                if (mutation.type === 'attributes' && mutation.attributeName === 'style') {
                    if (pageContent.style.display === 'block') {
                        initPage();
                        observer.disconnect();
                    }
                }
            }
        });
        observer.observe(pageContent, { attributes: true });
    } else {
        initPage();
    }

    function initPage() {
        const tablesWrapper = document.getElementById('tables-wrapper');
        const addTableBtn = document.getElementById('add-table-btn');
        const modal = document.getElementById('add-table-modal');
        const closeModalBtn = modal.querySelector('.close-modal-btn');
        const addTableForm = document.getElementById('add-table-form');
        const tableNameInput = document.getElementById('new-table-name');

        addTableBtn.addEventListener('click', () => modal.style.display = 'flex');
        const hideModal = () => { modal.style.display = 'none'; tableNameInput.value = ''; };
        closeModalBtn.addEventListener('click', hideModal);
        modal.addEventListener('click', e => e.target === modal && hideModal());

        const api = {
            async getTables() {
                const response = await fetch(`/api/costs/${costType}?projectId=${projectId}`);
                if (!response.ok) throw new Error('Failed to fetch tables');
                return response.json();
            },
            async createTable(name) {
                const response = await fetch(`/api/costs/${costType}`, {
                    method: 'POST', headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ name, projectId })
                });
                if (!response.ok) throw new Error('Failed to create table');
                return response.json();
            },
            async updateTable(tableId, data) {
                const response = await fetch(`/api/costs/${costType}/${tableId}`, {
                    method: 'PUT', headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(data)
                });
                if (!response.ok) throw new Error('Failed to update table');
            },
            async deleteTable(tableId) {
                 const response = await fetch(`/api/costs/${costType}/${tableId}`, { method: 'DELETE' });
                 if (!response.ok) throw new Error('Failed to delete table');
            }
        };

        function renderTable(table) {
            const tableWrapper = document.createElement('div');
            tableWrapper.className = 'table-wrapper';
            tableWrapper.setAttribute('data-table-id', table.id);
            tableWrapper.innerHTML = `
                <div class="table-header">
                    <h2 class="table-title" contenteditable="true">${escapeHTML(table.name)}</h2>
                    <button class="action-button delete-table-btn">&times;</button>
                </div>
                <div class="table-container">
                    <table class="expenses-table">
                         <thead>
                            <tr>
                                <th>التاريخ</th>
                                <th>بيان العمل</th>
                                <th>المبلغ المستحق</th>
                                <th>المبلغ المدفوع</th>
                                <th>الرصيد</th>
                                <th>إجراءات</th>
                            </tr>
                        </thead>
                        <tbody>${(table.rows || []).map(renderRow).join('')}</tbody>
                    </table>
                </div>
                <button class="action-button add-row-btn">+ إضافة سجل</button>
            `;
            return tableWrapper;
        }

        function renderRow(row, isNew = false) {
            const uniqueId = row.id || `temp_${Date.now()}`;
            const isEditing = isNew;
            const due = parseFloat(row.due) || 0;
            const paid = parseFloat(row.paid) || 0;
            const balance = due - paid;
            return `
                <tr data-row-id="${uniqueId}" class="${isEditing ? 'editing' : ''}">
                    <td data-label="التاريخ" contenteditable="${isEditing}">${escapeHTML(row.date || '')}</td>
                    <td data-label="بيان العمل" contenteditable="${isEditing}">${escapeHTML(row.description || '')}</td>
                    <td data-label="المبلغ المستحق" class="due" contenteditable="${isEditing}">${escapeHTML(row.due || '')}</td>
                    <td data-label="المبلغ المدفوع" class="paid" contenteditable="${isEditing}">${escapeHTML(row.paid || '')}</td>
                    <td data-label="الرصيد" class="balance">${balance.toFixed(2)}</td>
                    <td data-label="إجراءات" class="actions">
                        <button class="action-button edit-btn" style="display: ${isNew ? 'none' : 'inline-block'};">تعديل</button>
                        <button class="action-button save-btn" style="display: ${isNew ? 'inline-block' : 'none'};">حفظ</button>
                        <button class="action-button delete-row-btn">حذف</button>
                    </td>
                </tr>
            `;
        }

        async function loadTables() {
            try {
                tablesWrapper.innerHTML = '<p>جار تحميل الجداول...</p>';
                const tables = await api.getTables();
                tablesWrapper.innerHTML = '';
                tables.forEach(table => tablesWrapper.appendChild(renderTable(table)));
            } catch (error) {
                console.error(error);
                tablesWrapper.innerHTML = '<p class="error">فشل تحميل الجداول. حاول تحديث الصفحة.</p>';
            }
        }
        
        tablesWrapper.addEventListener('input', e => {
            const target = e.target;
            if (target.isContentEditable) {
                const row = target.closest('tr');
                if (row && (target.classList.contains('due') || target.classList.contains('paid'))) {
                    const dueEl = row.querySelector('.due');
                    const paidEl = row.querySelector('.paid');
                    const balanceEl = row.querySelector('.balance');
                    const due = parseFloat(dueEl.textContent) || 0;
                    const paid = parseFloat(paidEl.textContent) || 0;
                    balanceEl.textContent = (due - paid).toFixed(2);
                }
            }
        });
        
        addTableForm.addEventListener('submit', async (e) => {
            e.preventDefault();
            const tableName = tableNameInput.value.trim();
            if (tableName) {
                try {
                    const newTable = await api.createTable(tableName);
                    tablesWrapper.appendChild(renderTable(newTable));
                    hideModal();
                } catch (error) { alert('فشل إنشاء الجدول.'); }
            }
        });

        tablesWrapper.addEventListener('click', async e => {
            const target = e.target;
            const tableWrapper = target.closest('.table-wrapper');
            const tableId = tableWrapper?.dataset.tableId;
            if (target.classList.contains('add-row-btn')) {
                const tableBody = tableWrapper.querySelector('tbody');
                tableBody.insertAdjacentHTML('beforeend', renderRow({}, true));
                tableBody.lastElementChild.querySelector('td').focus();
            } else if (target.classList.contains('delete-table-btn')) {
                if (confirm('هل أنت متأكد من حذف هذا الجدول بالكامل؟')) {
                    try { await api.deleteTable(tableId); tableWrapper.remove(); } catch (error) { alert('فشل حذف الجدول'); }
                }
            } else {
                const row = target.closest('tr');
                if (!row) return;
                const isEditing = row.classList.contains('editing');
                if (target.classList.contains('edit-btn')) toggleRowEdit(row, true);
                else if (target.classList.contains('save-btn')) await saveRow(tableId, row);
                else if (target.classList.contains('delete-row-btn')) {
                    if(isEditing && !row.dataset.rowId.startsWith('temp')) toggleRowEdit(row, false);
                    else if(confirm('هل أنت متأكد من حذف هذا السجل؟')) {
                         if (row.dataset.rowId.startsWith('temp')) row.remove();
                         else await saveRow(tableId, row, true); 
                    }  
                }
            }
        });

        tablesWrapper.addEventListener('focusout', async e => {
            const target = e.target;
            const title = target.closest('.table-title');
            if (title && title.isContentEditable) {
                const tableWrapper = title.closest('.table-wrapper');
                const tableId = tableWrapper?.dataset.tableId;
                const newName = title.textContent.trim();
                if(tableId && newName) try { await api.updateTable(tableId, { name: newName }); } catch (error) { console.error(error); }
            }
        });

        function toggleRowEdit(row, isEditing) {
            Array.from(row.querySelectorAll('td:not(.actions):not(.balance)')).forEach(cell => cell.contentEditable = isEditing ? 'true' : 'false');
            row.querySelector('.edit-btn').style.display = isEditing ? 'none' : 'inline-block';
            row.querySelector('.save-btn').style.display = isEditing ? 'inline-block' : 'none';
            row.classList.toggle('editing', isEditing);
            if(isEditing) row.querySelector('td').focus();
        }

        async function saveRow(tableId, row, isDelete = false) {
            const tableState = getTableDataFromDOM(tableId);
            const rowIndex = Array.from(row.parentElement.children).indexOf(row);
            if (isDelete) {
                 tableState.rows.splice(rowIndex, 1);
            } else {
                const cells = Array.from(row.querySelectorAll('td:not(.actions)'));
                const rowData = {
                    id: row.dataset.rowId.startsWith('temp') ? `row_${Date.now()}` : row.dataset.rowId,
                    date: cells[0].textContent, description: cells[1].textContent, 
                    due: cells[2].textContent, paid: cells[3].textContent,
                };
                if(rowIndex >= tableState.rows.length) tableState.rows.push(rowData); else tableState.rows[rowIndex] = rowData;
                row.dataset.rowId = rowData.id;
            }
            try {
                await api.updateTable(tableId, { rows: tableState.rows });
                if(isDelete) row.remove(); else toggleRowEdit(row, false);
            } catch(error) { alert('فشل حفظ التغييرات'); }
        }

        function getTableDataFromDOM(tableId) {
            const tableWrapper = document.querySelector(`[data-table-id="${tableId}"]`);
            const name = tableWrapper.querySelector('.table-title').textContent;
            const rows = Array.from(tableWrapper.querySelectorAll('tbody tr')).map(row => ({
                id: row.dataset.rowId,
                date: row.children[0].textContent, description: row.children[1].textContent,
                due: row.children[2].textContent, paid: row.children[3].textContent,
            }));
            return { id: tableId, name, rows };
        }

        function escapeHTML(str) { const p = document.createElement('p'); p.textContent = str; return p.innerHTML; }

        loadTables();
    }
});
</script>

