---
import Layout from '../../../layouts/Layout.astro';
import { db } from "../../../firebase/admin";

// This function is required for Astro's static site generation to find all dynamic routes.
export async function getStaticPaths() {
    try {
        const projectsSnapshot = await db.collection('projects').get();
        if (projectsSnapshot.empty) {
            console.warn('⚠️ No projects found in Firestore. The page will not be generated.');
            return [];
        }
        const projects = projectsSnapshot.docs.map(doc => ({
            params: { id: doc.id },
            props: { project: { id: doc.id, ...doc.data() } }
        }));
        return projects;
    } catch (error) {
        console.error('❌ Critical Error in getStaticPaths while fetching projects ❌', error);
        // Return an empty array to prevent the build from crashing.
        // The page will likely 404, which is handled below.
        return [];
    }
}

const { project } = Astro.props;

// If no project data is passed (e.g., build error or invalid ID), redirect to a 404 page.
if (!project) {
    return Astro.redirect('/admin/404'); // Assuming you have a 404 page for admin
}
---

<Layout title={`تفاصيل مشروع: ${project.name}`}>
  <main class="project-details-page">
    <div class="container">

      <header class="page-header">
        <h1>تفاصيل المشروع</h1>
        <a href="/admin/projects" class="btn btn-secondary">
          &larr; العودة إلى القائمة
        </a>
      </header>

      <div class="details-container">
        <div class="project-info">
          <h2 class="project-name">{project.name}</h2>
          <p class="project-description">{project.description || 'لا يوجد وصف متاح لهذا المشروع.'}</p>
          
          <ul class="details-list">
            <li>
              <strong>
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon"><path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"></path><circle cx="12" cy="10" r="3"></circle></svg>
                الموقع:
              </strong>
              <span>{project.location || 'غير محدد'}</span>
            </li>
            <li>
              <strong>
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path><path d="m9 12 2 2 4-4"></path></svg>
                المشرف:
              </strong>
              <span>{project.supervisor || 'غير محدد'}</span>
            </li>
            <li>
              <strong>
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon"><rect width="20" height="16" x="2" y="4" rx="2"></rect><path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path></svg>
                بريد المشرف الإلكتروني:
              </strong>
              <span>{project.supervisorEmail || 'غير محدد'}</span>
            </li>
          </ul>
        </div>
      </div>

    </div>
  </main>
</Layout>

<style>
