---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="تعديل القسط">
    <main id="edit-installment-page">
        <div class="form-container">
            <div class="header">
                <h1>تعديل القسط</h1>
                <p>قم بتحديث تفاصيل القسط أدناه.</p>
            </div>

            <div id="loader" class="loader-container">
                <div class="loader"></div>
                <p>جاري تحميل بيانات القسط...</p>
            </div>

            <form id="edit-installment-form" style="display: none;">
                <div class="form-group">
                    <label for="amount">المبلغ</label>
                    <input type="number" id="amount" name="amount" required>
                </div>

                <div class="form-group">
                    <label for="due-date">تاريخ الاستحقاق</label>
                    <input type="date" id="due-date" name="dueDate" required>
                </div>

                <div class="form-group">
                    <label for="status">الحالة</label>
                    <select id="status" name="status" required>
                        <option value="unpaid">مستحق</option>
                        <option value="paid">مدفوع</option>
                    </select>
                </div>
                
                <div class="form-actions">
                    <button type="submit" class="btn">حفظ التعديلات</button>
                    <a id="cancel-btn" href="#" class="btn btn-secondary">إلغاء</a>
                </div>
            </form>

            <div id="error-message" class="error-placeholder" style="display: none;"></div>
        </div>
    </main>
</Layout>

<style>
    main#edit-installment-page {
        display: flex;
        justify-content: center;
        align-items: flex-start;
        padding: 2rem 1rem;
    }

    .form-container {
        width: 100%;
        max-width: 700px;
        background: #ffffff;
        padding: 2.5rem;
        border-radius: 16px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    }
    
    #edit-installment-form {
        display: none; /* Hidden by default */
        flex-direction: column;
        gap: 20px;
    }

    .form-group input[type="text"],
    .form-group input[type="number"],
    .form-group input[type="date"],
    .form-group select {
        width: 100%;
        padding: 12px 15px;
        border: 1px solid #ced4da;
        border-radius: 8px;
        font-size: 1rem;
        background-color: #f8f9fa;
        transition: border-color 0.2s ease, box-shadow 0.2s ease;
        appearance: none; /* Remove default styling */
    }

    .form-group input:focus,
    .form-group select:focus {
        outline: none;
        border-color: #80bdff;
        box-shadow: 0 0 0 3px rgba(0, 123, 255, 0.25);
        background-color: #fff;
    }
    
    .form-group select {
        background-image: url('data:image/svg+xml;charset=US-ASCII,%3Csvg%20width%3D%2220%22%20height%3D%2220%22%20xmlns%3D%22http%3A//www.w3.org/2000/svg%22%3E%3Cpath%20d%3D%22M5%208l5%205%205-5z%22%20fill%3D%22%236c757d%22/%3E%3C/svg%3E');
        background-repeat: no-repeat;
        background-position: left 0.75rem center;
        background-size: 16px 12px;
        padding-left: 2.5rem; /* Space for the icon */
    }

    .btn-primary {
        background-color: #007bff;
        color: white;
    }
    .btn-primary:hover {
        background-color: #0056b3;
    }
</style>

<script>
    import { getAuth, onAuthStateChanged } from 'firebase/auth';
    import { getFirestore, doc, getDoc, updateDoc } from 'firebase/firestore';
    import { app } from '../../firebase';

    const loader = document.getElementById('loader');
    const form = document.getElementById('edit-installment-form');
    const errorMessage = document.getElementById('error-message');
    const cancelBtn = document.getElementById('cancel-btn');

    const auth = getAuth(app);
    const db = getFirestore(app);

    let installmentId = null;
    let contractId = null;
    let installmentRef = null;

    onAuthStateChanged(auth, async (user) => {
        if (user) {
            const urlParams = new URLSearchParams(window.location.search);
            installmentId = urlParams.get('id');
            contractId = urlParams.get('contractId'); 

            if (!installmentId || !contractId) {
                displayError("لم يتم العثور على معرف القسط أو العقد. يرجى العودة والمحاولة مرة أخرى.");
                return;
            }
            
            cancelBtn.href = `/admin/contract-details?id=${contractId}`;
            installmentRef = doc(db, "installments", installmentId);
            await loadInstallmentData();
        } else {
            window.location.href = '/admin';
        }
    });

    async function loadInstallmentData() {
        try {
            const docSnap = await getDoc(installmentRef);
            if (docSnap.exists()) {
                const data = docSnap.data();
                form.elements['amount'].value = data.amount;
                form.elements['dueDate'].value = data.dueDate;
                form.elements['status'].value = data.status;
                loader.style.display = 'none';
                form.style.display = 'flex';
            } else {
                displayError(`لم يتم العثور على قسط بالمعرف: ${installmentId}`);
            }
        } catch (error) {
            console.error("Error loading installment data:", error);
            displayError("حدث خطأ أثناء تحميل بيانات القسط.");
        }
    }

    form.addEventListener('submit', async (e) => {
        e.preventDefault();
        const submitButton = form.querySelector('button[type="submit"]');
        submitButton.disabled = true;
        submitButton.textContent = 'جاري الحفظ...';

        try {
            const updatedData = {
                amount: parseFloat(form.elements['amount'].value),
                dueDate: form.elements['dueDate'].value,
                status: form.elements['status'].value,
            };

            await updateDoc(installmentRef, updatedData);
            window.location.href = `/admin/contract-details?id=${contractId}`;

        } catch (error) {
            console.error("Error updating installment: ", error);
            alert("فشل تحديث القسط. يرجى المحاولة مرة أخرى.");
            submitButton.disabled = false;
            submitButton.textContent = 'حفظ التعديلات';
        }
    });

    function displayError(message) {
        loader.style.display = 'none';
        errorMessage.textContent = message;
        errorMessage.style.display = 'block';
    }
</script>
