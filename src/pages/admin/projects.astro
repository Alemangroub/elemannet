---
import Layout from '../../layouts/Layout.astro';
--- 

<Layout title="إدارة المشروعات">
  <main class="projects-admin-page">
    <div class="container">

      <!-- Page Header -->
      <div class="page-header">
        <h1>إدارة المشروعات</h1>
        <div class="header-actions">
          <a href="/admin" class="btn btn-secondary">العودة للوحة التحكم</a>
          <button id="show-add-modal-btn" class="btn btn-primary">+ إضافة مشروع جديد</button>
        </div>
      </div>

      <!-- Projects Table -->
      <div class="projects-list-container">
        <h2>قائمة المشاريع</h2>
        <div class="table-wrapper">
          <table id="projects-table">
            <thead class="visually-hidden">
              <tr>
                <th>اسم المشروع</th>
                <th>موقع المشروع</th>
                <th>وصف المشروع</th>
                <th>اسم المشرف</th>
                <th>البريد الإلكتروني</th>
                <th>الإجراءات</th>
              </tr>
            </thead>
            <tbody id="projects-list">
              <!-- Rows are dynamically inserted here -->
            </tbody>
          </table>
        </div>
        <p id="no-projects-message">جاري تحميل المشاريع...</p>
      </div>

    </div>

    <!-- Add Project Modal -->
    <div id="add-project-modal" class="modal-overlay">
      <div class="modal-box form-modal-box">
        <div class="modal-header">
          <h2>إضافة مشروع جديد</h2>
          <button id="close-add-modal-btn" class="close-btn">&times;</button>
        </div>
        <form id="add-project-form">
          <div class="form-group">
            <label for="project-name">اسم المشروع</label>
            <input type="text" id="project-name" required />
          </div>
          <div class="form-group">
            <label for="project-location">موقع المشروع</label>
            <input type="text" id="project-location" required />
          </div>
          <div class="form-group">
            <label for="project-description">وصف المشروع</label>
            <textarea id="project-description" rows="3" required></textarea>
          </div>
          <div class="form-group">
            <label for="project-supervisor">اسم المشرف</label>
            <input type="text" id="project-supervisor" required />
          </div>
          <div class="form-row">
            <div class="form-group">
              <label for="supervisor-email">البريد الإلكتروني للمشرف</label>
              <input type="email" id="supervisor-email" required />
            </div>
            <div class="form-group">
              <label for="supervisor-password">كلمة السر للمشرف</label>
              <input type="password" id="supervisor-password" required />
            </div>
          </div>
          <button type="submit" class="btn btn-primary">إضافة المشروع</button>
        </form>
      </div>
    </div>

    <!-- Delete Confirmation Modal -->
    <div id="delete-modal" class="modal-overlay">
      <div class="modal-box">
        <h3>تأكيد الحذف</h3>
        <p>هل أنت متأكد من أنك تريد حذف هذا المشروع؟ لا يمكن التراجع عن هذا الإجراء.</p>
        <div class="modal-actions">
          <button id="cancel-delete-btn" class="btn btn-secondary">إلغاء</button>
          <button id="confirm-delete-btn" class="btn btn-danger">تأكيد الحذف</button>
        </div>
      </div>
    </div>
  </main>
</Layout>

<style is:global>
  /* General Page Styles */
  .projects-admin-page { padding: 3rem 1.5rem; background-color: #f4f7f6; min-height: 100vh; direction: rtl; font-family: 'Cairo', sans-serif; }
  .container { max-width: 1200px; margin: 0 auto; }
  .visually-hidden { position: absolute; width: 1px; height: 1px; padding: 0; margin: -1px; overflow: hidden; clip: rect(0, 0, 0, 0); border: 0; }
  
  /* Header */
  .page-header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 2.5rem; padding-bottom: 1.5rem; border-bottom: 1px solid #e0e0e0; }
  .page-header h1 { font-size: 2.2rem; color: #333; font-weight: 900; }
  .header-actions { display: flex; gap: 1rem; }

  /* Form Inputs */
  .form-group { margin-bottom: 1.5rem; }
  .form-group label { display: block; margin-bottom: 0.5rem; font-weight: 600; color: #555; }
  .form-group input, .form-group textarea { width: 100%; padding: 0.75rem 1rem; border: 1px solid #ccc; border-radius: 8px; font-size: 1rem; transition: border-color 0.3s, box-shadow 0.3s; }
  .form-group input:focus, .form-group textarea:focus { outline: none; border-color: #3f51b5; box-shadow: 0 0 0 3px rgba(63, 81, 181, 0.2); }
  .form-row { display: flex; gap: 1.5rem; }
  .form-row .form-group { flex: 1; }

  /* Projects List Container */
  .projects-list-container { background-color: transparent; padding: 0; border-radius: 0; box-shadow: none; }
  .projects-list-container h2 { font-size: 1.8rem; margin-bottom: 1.5rem; font-weight: 800; color: #3f51b5; }

  /* Projects Table Styles */
  .table-wrapper { overflow-x: auto; } 
  #projects-table { width: 100%; border-collapse: separate; border-spacing: 0 1rem; margin-top: 1rem; }
  #projects-table tbody tr {
    background-color: #fff;
    box-shadow: 0 4px 6px rgba(0,0,0,0.05);
    border-radius: 10px;
    transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    cursor: pointer;
    overflow: hidden; /* Ensures child elements conform to border radius */
  }
  #projects-table tbody tr:hover {
    transform: translateY(-4px);
    box-shadow: 0 10px 15px rgba(0,0,0,0.1);
  }
  #projects-table td { 
    padding: 1rem 1.25rem; 
    font-size: 0.95rem; 
    color: #555; 
    vertical-align: middle;
    border: none; /* Remove default borders */
    border-top: 1px solid #eee; /* Subtle top border */
    border-bottom: 1px solid #eee; /* Subtle bottom border */
  }
  #projects-table td:first-child { border-right: 1px solid #eee; border-top-right-radius: 10px; border-bottom-right-radius: 10px; }
  #projects-table td:last-child { border-left: 1px solid #eee; border-top-left-radius: 10px; border-bottom-left-radius: 10px; text-align: center; }
  #projects-table .description-cell { max-width: 250px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis; }
  #projects-table .project-name-cell { font-weight: 700; font-size: 1.05rem; color: #3f51b5; }
  #no-projects-message { text-align: center; padding: 2rem 0; font-size: 1.1rem; color: #777; }

  /* General Button Styles */
  .btn { display: inline-block; padding: 0.7rem 1.3rem; color: #fff; text-decoration: none; border-radius: 8px; font-size: 0.95rem; font-weight: 700; transition: all 0.2s ease-in-out; text-align: center; border: 1px solid transparent; cursor: pointer; }
  .btn:hover { transform: translateY(-2px); }
  .btn-primary { background-color: #3f51b5; border-color: #3f51b5; }
  .btn-primary:hover { background-color: #303f9f; border-color: #303f9f; }
  .btn-secondary { background-color: #6c757d; border-color: #6c757d; }
  .btn-secondary:hover { background-color: #5a6268; border-color: #5a6268; }
  .btn-danger { background-color: #d9534f; border-color: #d9534f; }
  .btn-danger:hover { background-color: #c9302c; border-color: #c9302c; }
  .btn-delete-custom {
      background-color: transparent;
      color: #d9534f;
      border: 1px solid #d9534f;
      padding: 0.4rem 0.8rem;
      font-size: 0.85rem;
      border-radius: 6px;
  }
  .btn-delete-custom:hover {
      background-color: #d9534f;
      color: #fff;
      transform: translateY(-2px); /* Keep consistent hover effect */
  }

  /* Modal Styles */
  .modal-overlay { position: fixed; top: 0; left: 0; right: 0; bottom: 0; background: rgba(0, 0, 0, 0.6); z-index: 1000; visibility: hidden; opacity: 0; transition: opacity 0.3s ease, visibility 0.3s ease; overflow-y: auto; padding: 2rem 0; }
  .modal-overlay.visible { visibility: visible; opacity: 1; }
  .modal-box { background: #fff; padding: 2rem; border-radius: 12px; width: 90%; text-align: right; transition: transform 0.3s ease; margin: auto; transform: scale(0.95); }
  .modal-overlay.visible .modal-box { transform: scale(1); }
  .modal-box h3 { font-size: 1.6rem; margin-top: 0; margin-bottom: 1rem; color: #333; text-align: center; }
  .modal-box p { margin-bottom: 2rem; color: #666; text-align: center; }
  .modal-actions { display: flex; justify-content: center; gap: 1rem; }
  .modal-actions .btn { min-width: 120px; }
  .form-modal-box { max-width: 600px; }
  .delete-modal .modal-box { max-width: 450px; }
  .modal-header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 1.5rem; padding-bottom: 1rem; border-bottom: 1px solid #e0e0e0; }
  .modal-header h2 { margin: 0; font-size: 1.8rem; font-weight: 800; color: #3f51b5; }
  .close-btn { background: none; border: none; font-size: 2.2rem; line-height: 1; font-weight: 300; color: #999; cursor: pointer; transition: color 0.2s; padding: 0; }
  .close-btn:hover { color: #333; }
</style>

<script>
  import { onAuthStateChanged } from 'firebase/auth';
  import { auth, db } from '../../firebase/client';
  import { collection, addDoc, onSnapshot, doc, deleteDoc } from 'firebase/firestore';

  // Auth Check
  onAuthStateChanged(auth, (user) => {
    if (!user) { window.location.href = '/admin'; }
  });

  const projectsCollection = collection(db, 'projects');

  // 1. Display Projects
  const projectsList = document.getElementById('projects-list');
  const noProjectsMessage = document.getElementById('no-projects-message');
  const projectsTable = document.getElementById('projects-table');

  onSnapshot(projectsCollection, (snapshot) => {
    if (snapshot.empty) {
      projectsTable.style.display = 'none';
      noProjectsMessage.textContent = 'لم تتم إضافة أي مشاريع بعد. انقر على زر "إضافة مشروع جديد" للبدء.';
    } else {
      projectsTable.style.display = '';
      noProjectsMessage.textContent = '';
      projectsList.innerHTML = snapshot.docs.map(doc => {
        const project = doc.data();
        return `
          <tr data-id="${doc.id}" data-href="/admin/projects/${doc.id}">
            <td class="project-name-cell">${project.name || '-'}</td>
            <td>${project.location || '-'}</td>
            <td class="description-cell" title="${project.description}">${project.description || '-'}</td>
            <td>${project.supervisor || '-'}</td>
            <td>${project.supervisorEmail || '-'}</td>
            <td>
              <button class="btn btn-delete-custom">حذف</button>
            </td>
          </tr>
        `;
      }).join('');
    }
  });

  // 2. Add Project Modal Logic
  const addProjectModal = document.getElementById('add-project-modal');
  const showAddModalBtn = document.getElementById('show-add-modal-btn');
  const closeAddModalBtn = document.getElementById('close-add-modal-btn');
  const addProjectForm = document.getElementById('add-project-form');

  function showModal(modal) { 
    modal.classList.add('visible');
    document.body.style.overflow = 'hidden';
  }
  function hideModal(modal) { 
    modal.classList.remove('visible'); 
    document.body.style.overflow = '';
  }

  showAddModalBtn.addEventListener('click', () => showModal(addProjectModal));
  closeAddModalBtn.addEventListener('click', () => hideModal(addProjectModal));
  addProjectModal.addEventListener('click', (e) => { if (e.target === addProjectModal) hideModal(addProjectModal); });

  addProjectForm.addEventListener('submit', async (e) => {
    e.preventDefault();
    const projectData = { name: document.getElementById('project-name').value, location: document.getElementById('project-location').value, description: document.getElementById('project-description').value, supervisor: document.getElementById('project-supervisor').value, supervisorEmail: document.getElementById('supervisor-email').value, supervisorPassword: document.getElementById('supervisor-password').value, createdAt: new Date() };
    try {
      await addDoc(projectsCollection, projectData);
      addProjectForm.reset();
      hideModal(addProjectModal);
    } catch (error) {
      console.error("Error adding document: ", error);
      alert('حدث خطأ أثناء إضافة المشروع.');
    }
  });

  // 3. Delete / Navigate Logic
  const deleteModal = document.getElementById('delete-modal');
  const confirmDeleteBtn = document.getElementById('confirm-delete-btn');
  const cancelDeleteBtn = document.getElementById('cancel-delete-btn');
  let projectIdToDelete = null;

  projectsList.addEventListener('click', (e) => {
    const row = e.target.closest('tr');
    if (!row) return; // Exit if the click was not inside a table row

    // Check if the delete button itself was clicked
    if (e.target.classList.contains('btn-delete-custom')) {
      projectIdToDelete = row.dataset.id;
      showModal(deleteModal);
    } else {
      // Otherwise, navigate using the row's data-href attribute
      const href = row.dataset.href;
      if (href) {
        window.location.href = href;
      }
    }
  });

  function hideDeleteModal() { hideModal(deleteModal); projectIdToDelete = null; }
  cancelDeleteBtn.addEventListener('click', hideDeleteModal);
  deleteModal.addEventListener('click', (e) => { if (e.target === deleteModal) hideDeleteModal(); });

  confirmDeleteBtn.addEventListener('click', async () => {
    if (projectIdToDelete) {
      try { await deleteDoc(doc(db, 'projects', projectIdToDelete)); } catch (error) { console.error("Error deleting document: ", error); }
    }
    hideDeleteModal();
  });

</script>