---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="إدارة المشروعات">
  <main class="projects-admin-page">
    <div class="container">
      <div class="page-header">
        <h1>إدارة المشروعات</h1>
        <p>من هذه الصفحة يمكنك إضافة وتعديل وحذف المشاريع الخاصة بالشركة.</p>
      </div>

      <!-- المحتوى المستقبلي لإدارة المشاريع سيتم إضافته هنا -->
      <div class="content-placeholder">
        <p>سيتم بناء هذه الواجهة قريبًا...</p>
      </div>

      <a href="/admin" class="back-button">العودة إلى لوحة التحكم</a>
    </div>
  </main>
</Layout>

<style>
  .projects-admin-page {
    padding: 4rem 2rem;
    background-color: #f4f7f6;
    min-height: 100vh;
    direction: rtl;
     font-family: 'Cairo', sans-serif;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    background-color: #fff;
    padding: 2rem;
    border-radius: 12px;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
  }

  .page-header {
    text-align: center;
    margin-bottom: 2.5rem;
    border-bottom: 1px solid #e0e0e0;
    padding-bottom: 1.5rem;
  }

  .page-header h1 {
    font-size: 2.5rem;
    color: #333;
    font-weight: 900;
  }

  .page-header p {
    font-size: 1.1rem;
    color: #666;
  }

  .content-placeholder {
    text-align: center;
    padding: 4rem 2rem;
    border: 2px dashed #ccc;
    border-radius: 8px;
    margin-bottom: 2rem;
  }

  .content-placeholder p {
    font-size: 1.2rem;
    color: #888;
    font-weight: 600;
  }

  .back-button {
    display: inline-block;
    padding: 0.8rem 1.5rem;
    background-color: #3f51b5;
    color: #fff;
    text-decoration: none;
    border-radius: 8px;
    font-size: 1rem;
    font-weight: 700;
    transition: background-color 0.3s ease;
  }

  .back-button:hover {
    background-color: #303f9f;
  }
</style>
