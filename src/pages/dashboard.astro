---
import Layout from '../layouts/Layout.astro';
---

<Layout title="لوحة تحكم المشرف">
  <main class="dashboard-page">
    <header class="dashboard-header">
      <div class="header-content">
        <h1>لوحة التحكم</h1>
        <p id="user-email">جارٍ التحميل...</p>
      </div>
      <button id="sign-out-btn" class="btn btn-danger">تسجيل الخروج</button>
    </header>

    <div class="projects-container">
      <h2>مشاريعك الحالية</h2>
      <div id="projects-list" class="projects-grid">
        <!-- سيتم إدراج المشاريع هنا بواسطة JavaScript -->
        <p class="loading-message">جارٍ تحميل المشاريع...</p>
      </div>
    </div>
  </main>
</Layout>

<script>
    import { auth, db } from '../firebase.js';
    import { onAuthStateChanged, signOut } from 'firebase/auth';
    import { collection, query, where, getDocs } from 'firebase/firestore';

    const userEmailEl = document.getElementById('user-email');
    const projectsListEl = document.getElementById('projects-list');
    const signOutBtn = document.getElementById('sign-out-btn');
    const adminEmail = 'admin@eleman.com';

    onAuthStateChanged(auth, async (user) => {
        if (user) {
            // المستخدم مسجل دخوله
            if (user.email === adminEmail) {
                // إذا كان المستخدم هو المدير، قم بإعادة توجيه إلى لوحة تحكم المدير
                window.location.href = '/admin';
                return;
            }

            userEmailEl.textContent = user.email;
            await fetchUserProjects(user.email);
        } else {
            // المستخدم غير مسجل دخوله، قم بإعادة توجيه إلى صفحة تسجيل الدخول
            window.location.href = '/login';
        }
    });

    async function fetchUserProjects(email) {
        try {
            const q = query(collection(db, "projects"), where("supervisors", "array-contains-any", [{email: email}]));
            const querySnapshot = await getDocs(q);
            
            projectsListEl.innerHTML = ''; // مسح رسالة التحميل

            if (querySnapshot.empty) {
                projectsListEl.innerHTML = '<p class="no-projects-message">لا توجد مشاريع مخصصة لك حاليًا.</p>';
                return;
            }

            querySnapshot.forEach((doc) => {
                const project = doc.data();
                const projectId = doc.id;
                const projectCard = `
                    <div class="project-card">
                        <h3>${project.projectName}</h3>
                        <p><strong>الكود:</strong> ${project.projectCode}</p>
                        <p><strong>العنوان:</strong> ${project.projectAddress}</p>
                         <a href="/project-details?id=${projectId}" class="btn-details">عرض التفاصيل</a>
                    </div>
                `;
                projectsListEl.innerHTML += projectCard;
            });

        } catch (error) {
            console.error("Error fetching projects: ", error);
            projectsListEl.innerHTML = '<p class="error-message">حدث خطأ أثناء جلب المشاريع.</p>';
        }
    }

    signOutBtn.addEventListener('click', () => {
        signOut(auth).then(() => {
            window.location.href = '/login';
        }).catch((error) => {
            console.error('Sign Out Error', error);
        });
    });
</script>

<style>
  .dashboard-page {
    padding: 2rem;
    background-color: #f4f7f6;
    min-height: 100vh;
    direction: rtl;
    font-family: 'Cairo', sans-serif;
  }

  .dashboard-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.5rem 2rem;
    background-color: #fff;
    border-radius: 12px;
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.08);
    margin-bottom: 2.5rem;
  }

  .header-content h1 {
    margin: 0;
    font-size: 2rem;
    font-weight: 800;
    color: #333;
  }

  .header-content p {
    margin: 0;
    color: #555;
    font-weight: 600;
  }

  .projects-container h2 {
    font-size: 1.75rem;
    margin-bottom: 1.5rem;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid #e0e0e0;
  }

  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 1.5rem;
  }

  .project-card {
    background-color: #fff;
    padding: 1.5rem;
    border-radius: 12px;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.07);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  
  .project-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0,0,0,0.1);
  }

  .project-card h3 {
    margin-top: 0;
    font-size: 1.4rem;
    color: #3f51b5;
  }

  .project-card p {
    margin: 0.5rem 0;
    color: #666;
  }
  
  .btn-details {
    display: inline-block;
    margin-top: 1rem;
    padding: 0.6rem 1.2rem;
    background-color: #2c3e50;
    color: #fff;
    text-decoration: none;
    border-radius: 8px;
    font-weight: 600;
    transition: background-color 0.3s;
  }
  
  .btn-details:hover {
    background-color: #34495e;
  }

  .loading-message, .no-projects-message, .error-message {
    grid-column: 1 / -1;
    text-align: center;
    padding: 2rem;
    font-size: 1.2rem;
    font-weight: 600;
    color: #777;
  }

  .btn {
    display: inline-block;
    padding: 0.8rem 1.5rem;
    color: #fff;
    text-decoration: none;
    border-radius: 8px;
    font-size: 1rem;
    font-weight: 700;
    transition: background-color 0.3s ease, transform 0.2s ease;
    border: none;
    cursor: pointer;
  }

  .btn-danger {
    background-color: #e74c3c;
  }

  .btn-danger:hover {
    background-color: #c0392b;
  }
</style>
