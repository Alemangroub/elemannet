---
import Layout from '../../layouts/Layout.astro';
import services from '../../data/services.json';
import TopBar from '../../components/TopBar.astro';
import Header from '../../components/Header.astro';

// This function runs at build time to generate all the static pages
export async function getStaticPaths() {
  return services.map(service => {
    return {
      params: { slug: service.slug },
      props: { service },
    };
  });
}

const { service } = Astro.props;
---

<Layout title={service.title}>
  <TopBar />
  <Header showMenu={true} />
  <article class="service-detail">
    <div class="container">
      
      <header class="service-header">
        <div class="header-content">
          <h1 class="service-title">{service.title}</h1>
          <a href="/" class="back-link">→ العودة إلى الرئيسية</a>
        </div>
        <div class="header-image-container">
          <img src={service.image} alt={service.title} class="header-image" />
        </div>
      </header>

      <div class="service-body">
        <p>{service.description}</p>
      </div>

    </div>
  </article>
</Layout>

<style>
  .service-detail {
    padding: 60px 0;
    background-color: #ffffff;
    direction: rtl;
  }

  .container {
    max-width: 900px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .service-header {
    display: grid;
    grid-template-columns: 1fr 300px;
    gap: 50px;
    align-items: center;
    margin-bottom: 50px;
    border-bottom: 1px solid #e9edf0;
    padding-bottom: 50px;
  }

  .header-content {
    display: flex;
    flex-direction: column;
  }

  .service-title {
    font-family: 'Cairo', sans-serif;
    font-size: 3rem;
    font-weight: 800;
    color: #2c3e50;
    line-height: 1.3;
    margin: 0;
  }

  .back-link {
    font-family: 'Almarai', sans-serif;
    color: #c09f7b;
    text-decoration: none;
    font-weight: 700;
    margin-top: 20px;
    transition: color 0.3s ease;
  }

  .back-link:hover {
    color: #a48663;
  }
  
  .header-image-container {
    width: 300px;
    height: 220px;
    border-radius: 15px;
    overflow: hidden;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  }

  .header-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .service-body {
    font-family: 'Almarai', sans-serif;
    font-size: 1.2rem;
    line-height: 2.2;
    color: #3f4e5f;
    text-align: justify;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .service-header {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .header-image-container {
      width: 100%;
      height: 250px;
      margin-top: 30px;
      order: -1; /* Move image to the top on mobile */
    }

    .service-title {
      font-size: 2.5rem;
    }

    .back-link {
        margin: 20px auto 0;
    }

    .service-body {
        font-size: 1.1rem;
        line-height: 2;
    }
  }
</style>